@model DWS.Models.CriteriaViewModel
@{
    ViewBag.Title = "Home Page";
}
<br/>

@using (Html.BeginForm("", "", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="form-group">
                <label class="small mb-1" for="Criteria">Criteria</label>
                @Html.TextBoxFor(m => m.Criteria, new { placeholder = "Enter Criteria", @class = "form-control py-4" })
                @Html.ValidationMessageFor(m => m.Criteria)
                <br/>
                <small>Draw a(n) &lt;shape&gt; with a &lt;measurement&gt; of &lt;amount&gt; [and a(n) &lt;measurement&gt; of &lt;amount&gt;]</small>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-lg"/>
            </div>
        </div>

    </div>
}

<div class="jumbotron">
    @if (!string.IsNullOrWhiteSpace(Model.Image))
    {
        <img src="data:image/jpeg;base64, @Model.Image"/>
    }
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}